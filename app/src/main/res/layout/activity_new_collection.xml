<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".NewCollection">

    <ImageView
        android:id="@+id/imgClipboardNewCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="clipboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/clipboard" />

    <TextView
        android:id="@+id/txtTitleNewCollection"
        android:layout_width="354dp"
        android:layout_height="38dp"
        android:background="#CC393232"
        android:contentDescription="title"
        android:text="Customize Your New Collection"
        android:textAlignment="center"
        android:textColor="#F2EDD7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="136dp"
        android:layout_height="52dp"
        android:contentDescription="saves_any_changes"
        android:text="Save Changes"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgClipboardNewCollection"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgClipboardNewCollection"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:contentDescription="back_to_viewCollections"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ListView
        android:id="@+id/listCollections"
        android:layout_width="295dp"
        android:layout_height="282dp"
        android:background="#333A6351"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imgClipboardNewCollection"
        app:layout_constraintEnd_toEndOf="@+id/imgClipboardNewCollection"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgClipboardNewCollection"
        app:layout_constraintVertical_bias="0.623" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="addsItem"
        android:text="Add New Item"
        android:textAlignment="center"
        android:textColor="#000000"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <Button
        android:id="@+id/btnRemoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="DeletesItem"
        android:text="Remove An Item"
        android:textAlignment="center"
        android:textColor="#000000"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/edtNewCollectionName"
        android:layout_width="212dp"
        android:layout_height="91dp"
        android:ems="10"
        android:hint="Collection Name"
        android:inputType="textPersonName"
        android:textColor="#F2EDD7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgClipboardNewCollection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <EditText
        android:id="@+id/edtGoal"
        android:layout_width="73dp"
        android:layout_height="94dp"
        android:ems="10"
        android:hint="max items"
        android:inputType="number"
        android:textColor="#F2EDD7"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNewCollectionName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />

</androidx.constraintlayout.widget.ConstraintLayout>