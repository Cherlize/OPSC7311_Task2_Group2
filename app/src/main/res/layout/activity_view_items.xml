<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ViewCollections">

    <com.ramijemli.percentagechartview.PercentageChartView
        android:id="@+id/percentageGraph"
        android:layout_width="89dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664"
        app:pcv_animDuration="800"
        app:pcv_animInterpolator="anticipate_overshoot"
        app:pcv_mode="ring"
        app:pcv_orientation="counter_clockwise"
        app:pcv_progress="10"
        app:pcv_startAngle="90" />

    <Button
        android:id="@+id/btnGraph"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:text="%"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentageGraph"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnTrade"
        android:layout_width="41dp"
        android:layout_height="115dp"
        android:text="Trade"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:visibility="gone"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShare"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="41dp"
        android:layout_height="104dp"
        android:text="Share"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:visibility="gone"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddItemView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtCollectionTitle"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="#CC393232"
        android:text="Welcome To Your Items"
        android:textAlignment="center"
        android:textColor="#F2EDD7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/btnAddItemView"
        android:layout_width="171dp"
        android:layout_height="46dp"
        android:text="Add New Item"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:visibility="visible"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnTrade"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listItems"
        app:layout_constraintVertical_bias="0.431" />

    <Button
        android:id="@+id/btnBackToCollections"
        android:layout_width="386dp"
        android:layout_height="61dp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloud"
        app:layout_constraintVertical_bias="0.313" />

    <Button
        android:id="@+id/btnDeleteCollection"
        android:layout_width="386dp"
        android:layout_height="61dp"
        android:text="Delete Collection"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloud"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/btnCloud"
        android:layout_width="42dp"
        android:layout_height="237dp"
        android:text="Cloud Storage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:visibility="gone"
        app:backgroundTint="#E48257"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrade"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listItems"
        android:layout_width="318dp"
        android:layout_height="255dp"
        android:background="#E63A6351"
        android:contentDescription="listofcollections"
        android:fadeScrollbars="true"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCollectionTitle"
        app:layout_constraintVertical_bias="0.046">

    </ListView>

    <EditText
        android:id="@+id/lblGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#000000"
        android:text="Category Goal Progress"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644" />

    <Switch
        android:id="@+id/switchEditIsImportant"
        android:layout_width="127dp"
        android:layout_height="18dp"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

</androidx.constraintlayout.widget.ConstraintLayout>


